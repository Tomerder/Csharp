<UserControl x:Class="Todo.App.Modules.Shell.ShellView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Todo.App.Modules.Shell"
             xmlns:t="clr-namespace:Toolkit;assembly=Toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{StaticResource dt.ShellVm}"
             >
    
    <Grid>
        <t:TransitionContentControl 
            Style="{StaticResource RegionTransitionContent}"
            Content="{Binding Current}"
            IndexPath="PageIndex"
            >
            <t:TransitionContentControl.EasingFunction>
                <QuarticEase EasingMode="EaseOut"/>
            </t:TransitionContentControl.EasingFunction>
        </t:TransitionContentControl>
    </Grid>
</UserControl>
